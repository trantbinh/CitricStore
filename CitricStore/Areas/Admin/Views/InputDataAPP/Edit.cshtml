@model CitricStore.Models.APP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .form-width{
        width:100%;
    }
    .form-height{
        height:200px;
    }
</style>
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<div class="container-fluid" style="margin: 10px auto; align-items:center; color:white">

    <h2 style="text-align: center; color:white">DỮ LIỆU PHẦN MỀM (APP)</h2>

    <h3 style="text-align: center; color: white">CHỈNH SỬA </h3>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            @using (Html.BeginForm("Edit", "InputDataApp", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal " style="color: white; font-size:20px; padding-left:30px; padding-right:30px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaApp)

                <div class="form-group">
                    Tên phần mềm:
                    <div class="col-12">
                        @Html.EditorFor(model => model.TenApp, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenApp, "", new { @class = "text-dark" })
                    </div>
                </div>

                <div class="form-group">
                    Giới thiệu:
                    <div class="col-12">
                        @Html.EditorFor(model => model.GioiThieu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GioiThieu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Dung lượng:
                    <div class="col-12">
                        @Html.EditorFor(model => model.DungLuong, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DungLuong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Đơn giá:
                    <div class="col-12">
                        @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Thể loại:
                    <div class="col-12">
                        @Html.DropDownList("MaTheLoaiApp", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaTheLoaiApp, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Nhà phát hành:
                    <div class="col-12">
                        @Html.DropDownList("MaNPH", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaNPH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Hệ điều hành:
                    <div class="col-12">
                        @Html.DropDownList("MaHDH", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaHDH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Ngôn ngữ:
                    <div class="col-12">
                        @Html.DropDownList("MaNgonNgu", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaNgonNgu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Ngày nhập:
                    <div class="col-12">
                        @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Đánh giá:
                    <div class="col-12">
                        @Html.EditorFor(model => model.DanhGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DanhGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px;">
                    <strong>Hình nền:</strong>
                    <div class="">
                        <div>
                            Chọn ảnh mới:
                            <img id="previewnen" class="d-none" src="#" width="300" height="200" style="margin-right:10px;" />
                            <input name="HinhNen" type="file" accept="image/*" id="fileImageNen" />


                            Ảnh hiện tại:
                            <img src="~/Images/APP/@Model.HinhNen" width="300" height="200" style="margin-left:18px" />

                        </div>
                        
                        <div style="margin-top:7px;">

                        </div>

                        @Html.ValidationMessageFor(model => model.HinhNen, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    <strong>Hình chi tiết 1:</strong>
                    <div class="col-12">
                        <div>
                            Chọn ảnh mới:
                            <img id="preview1" class="d-none" src="#" width="300" height="200" style="margin-right:10px;" />
                            <input name="HinhCT1" type="file" accept="image/*" id="fileImageCT1" />

                        </div>
                        <br />
                        <div style="margin-top:7px;">
                            Ảnh hiện tại:
                            <img src="~/Images/APP/@Model.HinhCT1" width="300" height="200" style="margin-left:18px" />

                        </div>

                        @Html.ValidationMessageFor(model => model.HinhCT1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px;">
                    <strong>Hình chi tiết 2:</strong>
                    <div class="col-12">
                        <div>
                            Chọn ảnh mới:
                            <img id="preview2" class="d-none" src="#" width="300" height="200" style="margin-right:10px;" />
                            <input name="HinhCT2" type="file" accept="image/*" id="fileImageCT2" />

                        </div>
                        <br />
                        <div style="margin-top:7px;">
                            Ảnh hiện tại:
                            <img src="~/Images/APP/@Model.HinhCT2" width="300" height="200" style="margin-left:18px" />

                        </div>
                        @Html.ValidationMessageFor(model => model.HinhCT2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px;">
                    <strong>Hình chi tiết 3:</strong>
                    <div class="col-12">
                        <div>
                            Chọn ảnh mới:
                            <img id="preview3" class="d-none" src="#" width="300" height="200" style="margin-right:10px;" />
                            <input name="HinhCT3" type="file" accept="image/*" id="fileImageCT3" />

                        </div>
                        <br />
                        <div style="margin-top:7px;">
                            Ảnh hiện tại:
                            <img src="~/Images/APP/@Model.HinhCT3" width="300" height="200" style="margin-left:18px" />

                        </div>
                        @Html.ValidationMessageFor(model => model.HinhCT3, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px;">
                    <strong>Hình chi tiết 4: </strong>
                    <div class="col-12">
                        <div>
                            Chọn ảnh mới:
                            <img id="preview4" class="d-none" src="#" width="300" height="200" style="margin-right:10px;" />
                            <input name="HinhCT4" type="file" accept="image/*" id="fileImageCT4" />

                        </div>
                        <br />
                        <div style="margin-top:7px;">
                            Ảnh hiện tại:
                            <img src="~/Images/APP/@Model.HinhCT4" width="300" height="200" style="margin-left:18px" />

                        </div>
                        @Html.ValidationMessageFor(model => model.HinhCT4, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-info" /> |
                        @Html.ActionLink("Quay về trang tổng hợp", "Index")
                    </div>
                </div>
            </div>
            }


        </div>
        <div class="col-2"></div>
    </div>
</div>
<script src="~/Scripts/UploadImage.js"></script>

