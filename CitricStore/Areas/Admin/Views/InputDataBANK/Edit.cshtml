@model CitricStore.Models.BANK

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link rel="stylesheet" href="~/Content/Input.css" />

<div class="container col-lg-6 col-md-10" style="margin: 0px auto; align-items:center">

    <h2 class="title">DỮ LIỆU NGÂN HÀNG</h2>

    <h3 style="text-align: center; color: white">CHỈNH SỬA </h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="color: white; font-size:20px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDBank)

            <div class="form-group">
                Tên ngân hàng:
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NameBank, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameBank, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:20px;">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Lưu" class="btn btn-info" style="font-size:20px; font-weight:500; width:30%" /> |
                    @Html.ActionLink("Quay về trang tổng hợp", "Index", null, new { @class = "nonedecor" })
                </div>
            </div>
        </div>
    }

</div>
