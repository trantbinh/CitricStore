@model CitricStore.Models.SOFTWARE

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<style>
    td {
        text-align: center;
        padding-bottom:10px;
    }
    .nonedecor{
        text-decoration:none;
    }
    .edit-btn{
       width:200px;
    }
    .nonedecor:hover {
        color: #FCAE03;
    }
</style>

<div class="container align-item-center" style="margin: 10px auto; width:100%">

    <h2 style="text-align: center; color:white">DỮ LIỆU PHẦN MỀM (SOFTWARE)</h2>

    <h3 style="text-align: center; color: white; margin-bottom:50px;">CHI TIẾT</h3>

    <div class="row">
        <div class="col-2"></div>
        <table class="table align-middle col-8" style="color: white; width: 70%; table-layout: fixed;word-break: break-word; font-size:20px;">
            <tr>
                <td>
                    <strong>Tên: </strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.NameSoft)
                </td>

            </tr>

            <tr>
                <td>
                    <strong>Giới thiệu: </strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Dung lượng: </strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Capacity) MB
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Đơn giá: </strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Price)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Ngày cập nhật: </strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.UpdateDate)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Đánh giá:</strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Rating)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Hệ điều hành:</strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.PLATFORM.NamePlatform)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Ngôn ngữ:</strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.LANGUAGE.NameLanguage)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Nhà phát hành:</strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.PUBLISHER.NamePublisher)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Thể loại:</strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.CATEGORY_SOFTWARE.NameCatSoft)
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Hình nền:</strong>
                </td>
                <td>
                    <img src="~/Images/APP/@Model.PicBG" style="width:300px; height:180px" />
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Hình chi tiết 1:</strong>
                </td>
                <td>
                    <img src="~/Images/APP/@Model.PicDetail1"style="width:300px; height:180px"/>
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Hình chi tiết 2:</strong>
                </td>
                <td>
                    <img src="~/Images/APP/@Model.PicDetail2" style="width:300px; height:180px"/>
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Hình chi tiết 3:</strong>
                </td>
                <td>
                    <img src="~/Images/APP/@Model.PicDetail3"style="width:300px; height:180px"/>
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Hình chi tiết 4:</strong>
                </td>
                <td>
                    <img src="~/Images/APP/@Model.PicDetail4" style="width:300px; height:180px" />
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.IDSoft }, new { @class = "btn btn-dark edit-btn " }) |
                    @Html.ActionLink("Quay về trang tổng hợp", "Index", null, new {@class = "nonedecor" })

                </td>
            </tr>

        </table>


        <div class="col-2"></div>
    </div>


</div>