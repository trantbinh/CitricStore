        </div>
    </div>

    <div class="form-group">
        Hình chi tiết 3
        <div class="col-md-10">
            <input type="file" name="PicDetail3" />
            @Html.ValidationMessageFor(model => model.PicDetail3, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Hình chi tiết 4
        <div class="col-md-10">
            <input type="file" name="PicDetail4" />
            @Html.ValidationMessageFor(model => model.PicDetail4, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Tạo App" class="btn btn-info" /> |
            @Html.ActionLink("Quay về trang tổng hợp", "Index")
        </div>
    </div>
</div>
