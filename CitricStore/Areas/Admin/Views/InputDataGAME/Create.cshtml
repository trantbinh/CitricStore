@model CitricStore.Models.GAME

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div class="container" style="margin: 10px auto; width:100%; align-items:center">

    <h2 style="text-align: center; color:white">DỮ LIỆU PHẦN MỀM (APP)</h2>

    <h3 style="text-align: center; color: white">TẠO MỚI</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal" style="color: white; font-size:20px;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Tên trò chơi:
        <div class="col-md-10">
            @Html.EditorFor(model => model.NameGame, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameGame, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Giới thiệu:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Dung lượng:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Capacity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Capacity, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Đơn giá:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        Thể loại:
        <div class="col-md-10">
            @Html.DropDownList("IDCatGame", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDCatGame, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Nhà phát hành:
        <div class="col-md-10">
            @Html.DropDownList("IDPublisher", null, htmlAttributes: new { @class = "form-control" })
