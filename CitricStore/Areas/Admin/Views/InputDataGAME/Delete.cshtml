@model CitricStore.Models.GAME

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div class="container" style="margin: 10px auto; width:100%; align-items:center">

    <h2 style="text-align: center; color:white">DỮ LIỆU TRÒ CHƠI (GAME)</h2>

    <h3 style="text-align: center; color: white">XOÁ DỮ LIỆU</h3>
    <div>
        <dl class="dl-horizontal" style="color: white">
            <dt>
                Tên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameGame)
            </dd>

            <dt>
                Giới thiệu:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Dung lượng:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Capacity)
            </dd>
            <dt>
                Đơn giá:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                Ngày cập nhật:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpdateDate)
            </dd>

            <dt>
                Đánh giá:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt>
                Hệ điều hành:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PLATFORM.NamePlatform)
            </dd>

            <dt>
                Ngôn ngữ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LANGUAGE.NameLanguage)
            </dd>

            <dt>
                Nhà phát hành:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PUBLISHER.NamePublisher)
            </dd>

            <dt>
                Thể loại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CATEGORY_GAME.NameCatGame)
            </dd>

            <dt>
                Hình Nền
            </dt>

            <dd>
                <img src="~/Images/GAME/@Model.PicBG" style="width:600px; height:300px" />
            </dd>

            <dt>
                Hình chi tiết 1
            </dt>

            <dd>
                <img src="~/Images/GAME/@Model.PicDetail1" style="width:600px; height:300px" />
            </dd>

            <dt>
                Hình chi tiết 2
            </dt>

            <dd>
                <img src="~/Images/GAME/@Model.PicDetail2" style="width:600px; height:300px" />
            </dd>

            <dt>
                Hình chi tiết 3
            </dt>

            <dd>
                <img src="~/Images/GAME/@Model.PicDetail3" style="width:600px; height:300px" />
            </dd>

            <dt>
                Hình chi tiết 4
            </dt>

            <dd>
                <img src="~/Images/GAME/@Model.PicDetail4" style="width:600px; height:300px" />
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xoá" class="btn btn-info" /> |
                @Html.ActionLink("Quay về trang tổng hợp", "Index")
            </div>
        }
    </div>
</div>