@model IEnumerable<CitricStore.Models.GAME>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<style>
    th, td {
        text-align: center
    }
</style>

<h2 style="text-align: center; color:white">DỮ LIỆU TRÒ CHƠI (GAME)</h2>

<h3 style="text-align: center; color:white">TỔNG HỢP</h3>

<p>
    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table-bordered" style="table-layout:fixed; width:100%; word-break: break-word; color:white;">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên
        </th>
        <th style="width:30%;">
            Giới thiệu
        </th>
        <th>
            Dung lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            HDH
        </th>
        <th>
            Ngôn ngữ
        </th>
        <th>
            NPH
        </th>
        <th>
            Thể loại
        </th>

        <th>
            Ngày nhập
        </th>
        <th>
            Đánh giá
        </th>
        <th>
            Nền
        </th>
        <th>
            Chi tiết 1
        </th>
        <th>
            Chi tiết 2
        </th>
        <th>
            Chi tiết 3
        </th>
        <th>
            Chi tiết 4
        </th>
        <th>
            Sửa
        </th>
        <th>
            Chi tiết
        </th>
        <th>
            Xoá
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IDGame)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NameGame)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Capacity)
    </td>
    <td>
        @String.Format("{0:0,0}", item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PLATFORM.NamePlatform)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LANGUAGE.NameLanguage)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PUBLISHER.NamePublisher)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CATEGORY_GAME.NameCatGame)
    </td>

    <td>
        @String.Format("{0:dd/MM/yy}", item.UpdateDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PicBG)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PicDetail1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PicDetail2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PicDetail3)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PicDetail4)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.IDGame }, new { @class = "btn btn-success" })
    </td>
    <td>
        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDGame }, new { @class = "btn btn-danger" })
    </td>
    <td>
        @Html.ActionLink("Xoá", "Delete", new { id = item.IDGame }, new { @class = "btn btn-primary" })
    </td>
</tr>
    }

</table>
