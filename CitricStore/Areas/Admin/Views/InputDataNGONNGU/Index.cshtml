@model IEnumerable<CitricStore.Models.NGONNGU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<style>
    th, td {
        text-align: center;
    }

    .index-btn {
        text-decoration: none;
        color: white;
    }
</style>


<div class="container" style="margin:0px auto; height:1000px; align-items:center">
    <h2 style="text-align: center; color:white">DỮ LIỆU NGÔN NGỮ</h2>

    <h3 style="text-align: center; color:white">TỔNG HỢP</h3>

    <p>
        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table-bordered" style="table-layout:fixed; width:100%; word-break: break-word; color:white; border-spacing:10px 10px;">
        <tr>
            <th>
                Mã
            </th>
            <th>
                Tên
            </th>
            <th>
                Sửa
            </th>
            <th>
                Chi tiết
            </th>
            <th>
                Xoá
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaNgonNgu)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TenNgonNgu)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNgonNgu }, new { @class = "index-btn" })
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNgonNgu }, new { @class = "index-btn" })
        </td>
        <td>
            @Html.ActionLink("Xoá", "Delete", new { id = item.MaNgonNgu }, new { @class = "index-btn" })
        </td>
    </tr>
        }

    </table>
    </div>