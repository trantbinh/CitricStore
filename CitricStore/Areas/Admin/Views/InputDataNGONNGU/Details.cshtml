@model CitricStore.Models.NGONNGU

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div class="container" style="margin: 10px auto; width:100%; align-items:center">

    <h2 style="text-align: center; color:white">DỮ LIỆU NGÔN NGỮ</h2>

    <h3 style="text-align: center; color: white">CHI TIẾT</h3>



    <div>
        <dl class="dl-horizontal" style="color: white">
            <dt>
                Tên ngôn ngữ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenNgonNgu)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaNgonNgu }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Quay về trang tổng hợp", "Index")
    </p>
</div>