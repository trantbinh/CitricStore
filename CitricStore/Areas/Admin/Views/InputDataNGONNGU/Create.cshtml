@model CitricStore.Models.NGONNGU

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<div class="container" style="margin: 10px auto; width:100%; align-items:center">

    <h2 style="text-align: center; color:white">DỮ LIỆU NGÔN NGỮ</h2>

    <h3 style="text-align: center; color: white">TẠO MỚI</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal" style="color: white; font-size:20px;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Tên ngôn ngữ:
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNgonNgu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNgonNgu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Tạo App" class="btn btn-info" /> |
            @Html.ActionLink("Quay về trang tổng hợp", "Index")
        </div>
    </div>
</div>
    }

    </div>
