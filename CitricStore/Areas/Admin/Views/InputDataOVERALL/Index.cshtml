@model IEnumerable<CitricStore.Models.OVERALL>

@{
    ViewBag.Title = "Ứng dụng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link rel="stylesheet" href="~/Content/Input.css" />
<h2 class=" title">DỮ LIỆU ỨNG DỤNG</h2>
<h3 class="minititle">TỔNG HỢP</h3>
<p>
    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table-bordered index-table">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên
        </th>
        <th style="width:30%;">
            Giới thiệu
        </th>
        <th>
            Dung lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            HDH
        </th>
        <th>
            Ngôn ngữ
        </th>
        <th>
            NPH
        </th>
        <th>
            Thể loại
        </th>

        <th>
            Ngày nhập
        </th>
        <th>
            Đánh giá
        </th>
        <th>
            Soft/Game
        </th>
        <th>
            Nền
        </th>
        <th>
            Chi tiết 1
        </th>
        <th>
            Chi tiết 2
        </th>
        <th>
            Chi tiết 3
        </th>
        <th>
            Chi tiết 4
        </th>
        <th>
            Sửa
        </th>
        <th>
            Chi tiết
        </th>
        <th>
            Xoá
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDOverall)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NameOverall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @String.Format("{0:0,0}", item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PLATFORM.NamePlatform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LANGUAGE.NameLanguage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PUBLISHER.NamePublisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY.NameCat)
            </td>

            <td>
                @String.Format("{0:dd/MM/yy}",item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoftOrGame)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PicBG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PicDetail1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PicDetail2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PicDetail3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PicDetail4)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDOverall }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDOverall }, new { @class = "btn btn-danger" })
            </td>
            <td>
                @Html.ActionLink("Xoá", "Delete", new { id = item.IDOverall }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>