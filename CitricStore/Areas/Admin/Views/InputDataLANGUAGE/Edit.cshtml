@model CitricStore.Models.LANGUAGE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link rel="stylesheet" href="~/Content/Input.css" />

<div class="container col-lg-6 col-md-10">


    <h2 style="text-align: center; color:white">DỮ LIỆU NGÔN NGỮ</h2>

    <h3 class="minititle">CHỈNH SỬA </h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal form-decor">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IDLanguage)

    <div class="form-group">
        Tên ngôn ngữ:
        <div class="col-md-12" style="margin-top:20px;">
            @Html.EditorFor(model => model.NameLanguage, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameLanguage, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group save-formgroup">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Lưu" class="btn btn-info save-btn"/> |
            @Html.ActionLink("Quay về trang tổng hợp", "Index", null, new { @class = "nonedecor" })
        </div>
    </div>
</div>
    }
</div>
