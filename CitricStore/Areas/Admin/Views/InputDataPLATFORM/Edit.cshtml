@model CitricStore.Models.PLATFORM

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link rel="stylesheet" href="~/Content/Input.css" />
<div class="container col-lg-6 col-md-10">
    <h2 class="title">DỮ LIỆU HỆ ĐIỀU HÀNH</h2>
    <h3 class="minititle">CHỈNH SỬA </h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal form-decor">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDPlatform)

            <div class="form-group">
                <div class="col-md-12 save-formgroup">
                    Tên hệ điều hành:
                    @Html.EditorFor(model => model.NamePlatform, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NamePlatform, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12 save-formgroup">
                    <input type="submit" value="Lưu" class="btn btn-info save-btn" /> |
                    @Html.ActionLink("Quay về trang tổng hợp", "Index", null, new { @class = "nonedecor" })
                </div>
            </div>
        </div>
    }
</div>