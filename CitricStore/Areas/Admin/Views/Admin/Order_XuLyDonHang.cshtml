@model CitricStore.Models.ORDER_INFO

@{
    ViewBag.Title = "Order_XuLyDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link href="~/Content/User.css" rel="stylesheet" />

<style>
    .ThanhVien {
        color: aliceblue;
    }
</style>

<div class="containercol-lg-6 col-md-12" style="margin:0px auto;">
    <h2 style="color:white;">CHỈNH SỬA THÔNG TIN THÀNH VIÊN</h2>
    <div style="color:white; font-size:18px;">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaOrder)

            @Html.HiddenFor(model => model.NgayOrder)
            @Html.HiddenFor(model => model.MaKH)
            @Html.HiddenFor(model => model.TenOrder)
            @Html.HiddenFor(model => model.SDTOrder)
            @Html.HiddenFor(model => model.EmailOrder)
            @Html.HiddenFor(model => model.MaNganHang)
            @Html.HiddenFor(model => model.MaTaiKhoan)
            @Html.HiddenFor(model => model.TenTaiKhoan)
            @Html.HiddenFor(model => model.TongTien)




            <table>
                <tr>
                    <td>
                        @Html.Action("Order_DonHang", "Admin", new { idor = Model.MaOrder })
                    </td>
                </tr>
            </table>
            <hr />


            <div class="form-group">
                @Html.LabelFor(model => model.TrangThaiXuLy, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("TrangThaiXuLy", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TrangThaiXuLy, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
        </div>
