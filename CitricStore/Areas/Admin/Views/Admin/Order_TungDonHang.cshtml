@using CitricStore.Models


@foreach (var item in Model)


{

        <p>Sản phẩm trong đơn hàng:</p>
        <div class="col-lg-7 col-md-6" style="margin-left: 0px; padding-left:0px; margin-right:0px; padding-right:0px;">

            @Html.Action("Order_InfoUngDung", "Admin", new { idud = item.MaUngDung })


        </div>




        <div class="col-4 align-content-between align-middle" style="vertical-align:middle">
            Số lượng: @item.SoLuong
            <br />
            Đơn giá: @String.Format("{0:0,0}", @item.Price) VND
        </div>

        




}

