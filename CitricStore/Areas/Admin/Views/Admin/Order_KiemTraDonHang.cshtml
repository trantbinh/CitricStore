@using CitricStore.Models
@{
    ViewBag.Title = "Order_KiemTraDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<style>
    .login-container {
        height: 700px;
    }

    .login-btn {
        width: 46%;
        margin-left: 10px;
    }
</style>
<div class="container col-lg-6 col-md-12" style="margin:0px auto;">
    <h2 style="text-align: center; color:white;">ĐƠN HÀNG CHƯA XỬ LÝ</h2>
    <div style="color:white; font-size:18px;">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-4">
                    @item.NgayOrder



                </div>
                <div class="col-8">
                    @Html.Action("Order_DonHang", "Admin", new { idor = item.MaOrder });

                </div>

            }





        </div>


    </div>
</div>
