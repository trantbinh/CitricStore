@model IEnumerable<CitricStore.Models.OVERALL>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />

<style>
    th, td {
        text-align: center
    }
</style>

<h2 style="text-align: center; color:white">DỮ LIỆU TỔNG HỢP ỨNG DỤNG</h2>

<h3 style="text-align: center; color:white">TỔNG HỢP</h3>

<p>
    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table-bordered" style="table-layout:fixed; width:100%; word-break: break-word; color:white;">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên
        </th>
        <th style="width:30%;">
            Giới thiệu
        </th>
        <th>
            Dung lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            HDH
        </th>
        <th>
            Ngôn ngữ
        </th>
        <th>
            NPH
        </th>
        <th>
            Thể loại
        </th>

        <th>
            Ngày nhập
        </th>
        <th>
            Đánh giá
        </th>
        <th>
            App/Game
        </th>
        <th>
            Nền
        </th>
        <th>
            Chi tiết 1
        </th>
        <th>
            Chi tiết 2
        </th>
        <th>
            Chi tiết 3
        </th>
        <th>
            Chi tiết 4
        </th>
        <th>
            Sửa
        </th>
        <th>
            Chi tiết
        </th>
        <th>
            Xoá
        </th>
    </tr>

        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Ma)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Ten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GioiThieu)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DungLuong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonGia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HEDIEUHANH.TenHDH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NGONNGU.TenNgonNgu)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NHAPHATHANH.TenNPH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.THELOAI.TenTheLoai)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.NgayCapNhat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DanhGia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppOrGame)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.HinhNen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HinhCT1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HinhCT2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HinhCT3)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HinhCT4)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.Ma }, new { @class = "btn btn-success" })
    </td>
    <td>
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Ma }, new { @class = "btn btn-danger" })
    </td>
    <td>
        @Html.ActionLink("Xoá", "Delete", new { id = item.Ma }, new { @class = "btn btn-primary" })
    </td>
</tr>
        }

    </table>
