@model CitricStore.Models.CUSTOMER

@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin";
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link href="~/Content/User.css" rel="stylesheet"/>


<div class="container col-lg-6 col-md-10" style="margin:0px auto;">
        <h2 class="title">CHỈNH SỬA THÔNG TIN THÀNH VIÊN</h2>
        <div style="color:white; font-size:18px; align-items:center">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="" style=" align-items:center;">
                @Html.ValidationSummary(true, null, new { @class = "error" })
                @Html.HiddenFor(model => model.IDCus)
                @Html.HiddenFor(model => model.LogName)

                <div class="form-group">
                    <strong>Tên Đăng Nhập:</strong> @Model.LogName
                </div>

                <div class="form-group">
                    Họ Tên:
                    <div class="col-md-12">
                        <input class="edit-form" name="NameCus" type="text" value="@Model.NameCus" />
                        <span data-valmsg-for="LinkName" data-valmsg-replace="true"></span>
            
                        @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Giới Tính:
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Sex, new { htmlAttributes = new { @class = "", @type = "radio", id = "sex_1", name = "Sex", value = "Nữ" } })
                        <label class="form-label" for="sex_1"> Nữ </label>
                        @Html.EditorFor(model => model.Sex, new { htmlAttributes = new { @class = "", @type = "radio", id = "sex_2", name = "Sex" ,value = "Nam" } })
                        <label class="form-label" for="sex_2"> Nam </label>

                        @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    Điện Thoại:
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "edit-form" } })
                        @Html.ValidationMessageFor(model => model.PhoneCus, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    Ngày Sinh:
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "edit-form" } })
                        @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Email:
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.EmailCus, new { htmlAttributes = new { @class = "edit-form" } })
                        @Html.ValidationMessageFor(model => model.EmailCus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Mật Khẩu:
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.LogPass, new { htmlAttributes = new { @class = "edit-form" } })
                        @Html.ValidationMessageFor(model => model.LogPass, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="padding-top:10px">
                        <input type="submit" value="Lưu" class="btn btn-dark" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Quay về", "ViewInfo","Users", new { idkh = Session["IDCus"]}, new { @class = "btn btn-dark combackviewinfo" })
            </div>
            </div>
</div>
