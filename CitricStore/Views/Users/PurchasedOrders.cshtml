@using CitricStore.Models
@model PagedList.IPagedList<CitricStore.Models.ORDER_INFO>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Đơn hàng đã mua";
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link href="~/Content/Users_DaMua.css" rel="stylesheet" />
<div class="container col-lg-6 col-md-12 donhang">
    <h2 class="tieude">ĐƠN HÀNG ĐÃ MUA</h2>
    <div class="madonhang">
        @foreach (var item in Model)
        {
            @Html.Action("PurchasedOrders_EachProduct", "Users", new { idor = item.IDOrder })
            <hr />
        }
    </div>
</div>
<br />
<div class="pagecolor">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>
<div class="pagecolor">
    @Html.PagedListPager(Model, page => Url.Action("Users_DaMua", null, new { page}))
</div>



