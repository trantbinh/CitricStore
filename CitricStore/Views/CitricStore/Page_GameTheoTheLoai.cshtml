    </div>

    <div class="row filter-container">
        <div class="col-md-2 col-sm-2 col-lg-1 filter-title">
            Sắp xếp:
        </div>
        @Html.ActionLink("Trò chơi mới nhất", "Page_GameTheoTheLoai", new { sortOrder = ViewBag.DateSortParm }, new { @class = "col-5 filter-1" })
        @Html.ActionLink("Trò chơi hay nhất", "Page_GameTheoTheLoai", new { sortOrder = ViewBag.RateSortParm }, new { @class = "col-5 filter-2" })
