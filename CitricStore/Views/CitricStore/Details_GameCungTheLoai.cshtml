@using CitricStore.Models;

@foreach (var game in Model)
{
<div class="game-list-item">
    <a href="@Url.Action("DetailsGame", "CitricStore", new { id = game.MaGame })">
        <img class="game-list-item-img" src="~/Images/GAME/@game.HinhNen" alt="Card Image">
        <span class="game-list-item-title" style="color:white">@game.TenGame</span>
    </a>
</div>
}