@using CitricStore.Models
@{
    ViewBag.Title = @Model.NameGame;
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}

<link rel="stylesheet" href="~/Content/AppPage.css" />
<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/Content/Rating,js.js"></script>
<script>
    $(function () {
        $('.stars').stars();
    });
</script>

<div class="row" style="margin-top:20px;">
    <div class="col-lg-8">
        <div class="slideshow">
            <div class="display-container">
                <img class="slides animate-fading" onclick="changeImage()" src="~/Images/GAME/@Model.PicBG">
                <img class="slides animate-fading" onclick="changeImage()" src="~/Images/GAME/@Model.PicDetail1">
                <img class="slides animate-fading" onclick="changeImage()" src="~/Images/GAME/@Model.PicDetail2">
                <img class="slides animate-fading" onclick="changeImage()" src="~/Images/GAME/@Model.PicDetail3">
                <img class="slides animate-fading" onclick="changeImage()" src="~/Images/GAME/@Model.PicDetail4">
                <!--Nút qua lại-->
                <button class="image-button button-left" onclick="plusDivs(-1)">&#10094;</button>
                <button class="image-button button-right" onclick="plusDivs(1)">&#10095;</button>

                <!-- Chấm tròn -->
                <div class="badge" style="width:100%">
                    <span class="image-badge" onclick="currentDiv(1)"></span>
                    <span class="image-badge" onclick="currentDiv(2)"></span>
                    <span class="image-badge" onclick="currentDiv(3)"></span>
                    <span class="image-badge" onclick="currentDiv(4)"></span>
                    <span class="image-badge" onclick="currentDiv(5)"></span>
                </div>
            </div>
        </div>
        <script language="Javascript" src="~/Scripts/SlideImageAuto.js"></script>
    </div>

    <div class="col-lg-4">
        <div class="tenungdung" style=" padding-bottom:10px; padding-top:10px; text-align:center; margin-top:100px;">
            @Model.NameGame
        </div>

        <div class="price" style="color: white; font-size: 30px; text-align: center">
            @String.Format("{0:0,0}", Model.Price) VND
        </div>

        <a class="nuttaigame align-items-center" style="margin: 25px auto; display:block;"
           href="@Url.Action("AddToCart","Cart", new {id = Model.IDGame})">
            Thêm vào giỏ hàng
        </a>
    </div>
</div>
<script language="Javascript" src="~/Scripts/SlideImageAuto.js"></script>

<div class="col-12">
    <div class="row">
        <p class="tieude">NỘI DUNG</p>
        <p class="noidung">
            @Model.Description
        </p>
        <hr />
        <p class="tieude">ĐÁNH GIÁ CỦA NGƯỜI DÙNG</p>
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-2 col-md-2" style="font-size:40px; color:white; text-align:right;">@Model.Rating</div>

            <div class="col-lg-4 col-md-6 danhgia justify-content-start align-bottom">
                <span class="stars" data-rating="@Model.Rating" data-num-stars="5"></span>
            </div>
            <div class="col-lg-3 col-md-2"></div>

        </div>

        <p class="tieude">CHI TIẾT</p>
        <p class="chitiet">Thể loại: @Html.Action("TenTheLoaiGame", "CitricStore", new { idtheloai = Model.IDCatGame })</p>
        <p class="chitiet">Nhà phát hành: @Html.Action("Details_TenNPH", "CitricStore", new { idnph = Model.IDPublisher })</p>
        <p class="chitiet">Dung lượng: @Model.Capacity MB</p>
        <p class="chitiet">Ngôn ngữ: @Html.Action("Details_NameLanguage", "CitricStore", new { idngonngu = Model.IDLanguage })</p>
        <p class="chitiet">Hệ điều hành: @Html.Action("Details_TenHDH", "CitricStore", new { idhdh = Model.IDPlatform })</p>
        <p class="chitiet">Ngày cập nhật: @String.Format("{0:dd MMM, yyy}", Model.UpdateDate)</p>
        <hr>
        <div class="game-list-container">
            <h1 class="game-list-title" style="margin-bottom: -20px;">TRÒ CHƠI CÙNG THỂ LOẠI</h1>
            <div class="game-list-wrapper">
                <div class="game-list" id="game-list-scrollbar">
                    @Html.Action("Details_GameCungTheLoai", "CitricStore", new { idtheloai = Model.IDCatGame })
                </div>
            </div>
        </div>
        <div class="game-list-container">
            <h1 class="game-list-title" style="margin-bottom: -20px;">TRÒ CHƠI MỚI</h1>
            <div class="game-list-wrapper">
                <div class="game-list" id="game-list-scrollbar">
                    @Html.Action("Details_GameMoi", "CitricStore")
                </div>
            </div>
        </div>
        <div class="game-list-container">
            <h1 class="game-list-title" style="margin-bottom: -20px;">TRÒ CHƠI HOT</h1>
            <div class="game-list-wrapper">
                <div class="game-list" id="game-list-scrollbar">
                    @Html.Action("Details_GameTheoDanhGia", "CitricStore")
                </div>
            </div>
        </div>
    </div>

    </div>
