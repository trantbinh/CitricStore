@model CitricStore.Models.ORDER_INFO

@{
    ViewBag.Title = "Page_Payment";
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<link href="~/Content/Page_Payment.css" rel="stylesheet" />

<div class="container col-lg-6 col-md-10 thanthongtindonhang">
    <h2 class="title">THÔNG TIN NHẬN HÀNG VÀ THANH TOÁN</h2>
    <div class="align-items-center justify-content-center chitiet">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal align-items-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                Tên Nhận Hàng:
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NameOrder, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.NameOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số Điện Thoại:
                <div class="col-md-12">
                    @Html.EditorFor(model => model.PhoneOrder, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.PhoneOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Email Nhận Hàng:
                <div class="col-md-12">
                    @Html.EditorFor(model => model.EmailOrder, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.EmailOrder, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Ngân Hàng Thanh Toán:
                <div class="col-md-12">
                    @Html.DropDownList("IDBank", null, htmlAttributes: new { @class = "search-form" })
                    @Html.ValidationMessageFor(model => model.IDBank, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Mã Tài Khoản:
                <div class="col-md-12">
                    @Html.EditorFor(model => model.IDPayAccount, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.IDPayAccount, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Tên Chủ Tài Khoản:
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NamePayAccount, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.NamePayAccount, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row justify-content-center">
                    <input type="submit" value="Xác nhận thanh toán" class="btn btn-dark nutxatnhanthanhtoan" />
            </div>
        </div>
        }
        </div>
</div>
