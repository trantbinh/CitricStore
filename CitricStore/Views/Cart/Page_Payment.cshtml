@model CitricStore.Models.ORDER_INFO

@{
    ViewBag.Title = "Page_Payment";
    Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap5/css/bootstrap.css" />
<style>
    .register-btn {
        width: 46%;
        margin-left: 10px;
    }
    .search-form {
        width:100%;
        display: block;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        -webkit-appearance: none;
        -moz-appearance: none;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .search-form:focus {
            color: #212529;
            background-color: #fff;
            border-color: #86b7fe;
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }


        .search-form::-moz-placeholder {
            color: #6c757d;
            opacity: 1;
        }

        .search-form::placeholder {
            color: #6c757d;
            opacity: 1;
        }

    .giohang {
        text-decoration: none;
        color: white;
        font-size: 16px;
        margin-left: 470px;
    }

</style>

<div class="container" style="margin:0px auto; min-height:900px; ">
    <h2 style="text-align: center; color:white">THÔNG TIN NHẬN HÀNG VÀ THANH TOÁN</h2>
    <div class="align-items-center justify-content-center"style="color:white; font-size:18px; margin-left:240px; margin-right:110px;">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal align-items-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                Tên Nhận Hàng:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenOrder, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.TenOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số Điện Thoại:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SDTOrder, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.SDTOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Email Nhận Hàng:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailOrder, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.EmailOrder, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Ngân Hàng Thanh Toán:
                <div class="col-md-10">
                    @Html.DropDownList("MaNganHang", null, htmlAttributes: new { @class = "search-form" })
                    @Html.ValidationMessageFor(model => model.MaNganHang, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Mã Tài Khoản:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaTaiKhoan, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.MaTaiKhoan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Tên Chủ Tài Khoản:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "search-form" } })
                    @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" >
                    <input type="submit" value="Xác nhận thanh toán" class="btn btn-dark" style="margin-top:20px; margin-left:430px; font-size:18px;" />
                </div>
            </div>
        </div>
        }

        @*<div>
            @Html.ActionLink("Quay Về Giỏ Hàng", "GetCartInfo",null,null,new {@class="giohang" })
        </div>*@
        </div>
</div>